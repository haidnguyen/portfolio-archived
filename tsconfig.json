{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["./src/*"],
    },
    "types": ["jest", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "__mocks__"
  ]
}